   melt = reset --soft HEAD^
   shove = push --force-with-lease

   a = add
   aa = add .
   ai = add -i
   ap = add -p
   bc = checkout -b
   bm = branch -m
   bd = branch -D
   c = commit
   ca = commit --amend
   can = commit --amend --no-edit
   ch = checkout
   cl = clone
   d = diff
   dc = diff --cached
   f = fetch --all -Pp
   j = jump
   r = rebase
   ri = rebase -i
   ra = rebase --abort
   rc = rebase --continue
   rq = rebase --quit
   rr = reset
   s = status -sb
   st = stash
   sd = stash drop
   sp = stash pop
