[core]
   pager=less -x3
[user]
   name = Gino Gravanis
   email = ginogravanis@users.noreply.github.com
[merge]
   conflictstyle = diff3
[alias]
   jump = reset --hard
   melt = reset --soft HEAD^
   shove = push --force-with-lease

   a = add
   aa = add .
   ap = add -p
   b = checkout -b
   c = commit
   ca = commit --amend
   can = commit --amend --no-edit
   ch = checkout
   cl = clone
   d = branch -D
   f = fetch --all -Pp
   j = jump
   m = branch -m
   r = rebase
   ri = rebase -i
   s = status -sb
   st = stash
   sd = stash drop
   sp = stash pop
