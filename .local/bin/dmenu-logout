#!/usr/bin/env bash
# depends: coreutils, dmenu, systemd-sysvcompat, slock

choice=$(echo -e "Lock screen\nReboot\nShutdown" | dmenu)

confirm() {
   answer=$(echo -e "Yes\nNo" | dmenu -p "$1")
   case $answer in
      "Yes") return 0 ;;
      *) return 1 ;;
   esac
}

case $choice in
   "Shutdown") confirm "Shutdown?" && shutdown now ;;
   "Reboot") confirm "Reboot?" && reboot ;;
   "Lock screen") slock ;;
   *) ;;
esac
